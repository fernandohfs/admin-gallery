{% extends "_layouts/default.njk" %}

{% block body %}
  {% include "_partials/header.njk" %}

  {% include "_partials/aside.njk" %}

  <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">Álbuns</h1>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>Título</th>
                <th>Descrição</th>
                <th>Fotos</th>
                <th>Editar</th>
                <th>Excluir</th>
              </tr>
            </thead>
            <tbody>
            {% for album in albums %}
              <tr>
                <td>{{ album.id }}</td>
                <td>{{ album.title }}</td>
                <td>{{ album.description }}</td>
                <td>
                  <a href="/albums/{{ album.id }}/photos">Visualizar as fotos</a>
                </td>
                <td>
                  <a href="/albums/{{ album.id }}/edit">Editar</a>
                </td>
                <td>
                  <a href="/albums/{{ album.id }}/del">Deletar</a>
                </td>
              <tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
{% endblock %}
